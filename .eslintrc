{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "extends": [
    "standard-with-typescript",
    "airbnb",
    "airbnb-typescript",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es2021": true
  },
  "plugins": [
    "@typescript-eslint",
    "react",
    "react-hooks",
    "import",
    "jsx-a11y",
    "promise"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["./tsconfig.json"]
  },
  "rules": {
    // Note: you must disable the base rule as it can report incorrect errors
    // https://typescript-eslint.io/rules/semi/#options
    "semi": "off",
    "@typescript-eslint/semi": "error",
    // note you must disable the base rule as it can report incorrect errors
    // https://github.com/typescript-eslint/typescript-eslint/blob/master/packages/eslint-plugin/docs/rules/no-use-before-define.md#how-to-use
    "no-use-before-define": 0,
    "@typescript-eslint/no-use-before-define": 2,
    /**/
    // note you must disable the base rule as it can report incorrect errors
    // https://github.com/typescript-eslint/typescript-eslint/blob/master/packages/eslint-plugin/docs/rules/no-shadow.md#how-to-use
    "no-shadow": 0,
    "@typescript-eslint/no-shadow": 2,
    /**/
    "@typescript-eslint/ban-ts-comment": 1,
    /**/
    "no-console": 2,
    "no-plusplus": 0,
    "max-len": 0,
    "arrow-parens": 0,
    //    "camelcase": [1, { "allow": ["^UNSAFE_"] }],
    "camelcase": 0,
    "quote-props": [2, "consistent-as-needed"],
    "function-paren-newline": [2, "consistent"],
    "no-mixed-operators": 1,
    "no-case-declarations": 2,
    "no-nested-ternary": 0,

    // Note: you must disable the base rule as it can report incorrect errors
    // https://typescript-eslint.io/rules/object-curly-spacing/#options
    "object-curly-spacing": "off",
    "@typescript-eslint/object-curly-spacing": "off",

    "object-curly-newline": [2, {
      "multiline": true,
      "consistent": true
    }],
    "lines-between-class-members": [2, "always", { "exceptAfterSingleLine": true }],

    "import/no-cycle": 2,
    "import/prefer-default-export": 0,

    // https://github.com/airbnb/javascript/blob/master/packages/eslint-config-airbnb-base/rules/imports.js#L139
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ],

    "react/jsx-props-no-spreading": 1,
    "react/destructuring-assignment": 0,
    "react/no-danger": 0,
    "react/no-unused-state": 1,
    "react/prefer-stateless-function": 0,
    "react/forbid-prop-types": 1,
    "react/jsx-no-target-blank": 0,
    "react/jsx-closing-bracket-location": 2,
    "react/jsx-one-expression-per-line": 0,
    "react/no-unescaped-entities": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".jsx", ".tsx"] }],
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1,
    "react/button-has-type": 0,
    "react/no-array-index-key": 0,
    "react/function-component-definition": 0,

    "jsx-a11y/no-autofocus": 1,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "jsx-a11y/alt-text": 2,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/mouse-events-have-key-events": 0
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "rules": {
        "@typescript-eslint/explicit-function-return-type": 2,
        "react/require-default-props":  0
      }
    },
    {
      "files": ["*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": 0
      }
    }
  ]
//  "settings": {
//    "import/resolver": {
//      "node": {
//        "extensions": [".js", ".jsx", ".ts", ".tsx"]
//      }
//    }
//  }
}
